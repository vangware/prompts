{
	"name": "@vangware/prompts",
	"description": "⁉️ CLI interactive prompts",
	"version": "2.1.1",
	"author": {
		"email": "hello@vangware.com",
		"name": "Vangware",
		"url": "https://vangware.com"
	},
	"bugs": {
		"email": "issues@vangware.com",
		"url": "https://github.com/vangware/prompts/issues"
	},
	"dependencies": {
		"@vangware/types": "^5.1.5"
	},
	"devDependencies": {
		"@evilmartians/lefthook": "^1.3.9",
		"@types/node": "^18.15.11",
		"@vangware/configs": "^4.2.2",
		"@vangware/test": "^10.1.2",
		"c8": "^7.13.0",
		"eslint": "^8.38.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.7",
		"rimraf": "^4.4.1",
		"stylelint": "^15.4.0",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4"
	},
	"exports": {
		".": "./dist/index.js",
		"./*": "./dist/*"
	},
	"files": [
		"dist"
	],
	"homepage": "https://prompts.vangware.com",
	"keywords": [
		"ansi",
		"cli",
		"prompts",
		"typescript",
		"vangware"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/vangware/prompts.git"
	},
	"scripts": {
		"clean": "rimraf ./dist",
		"compile": "tsc --project ./tsconfig.dist.json",
		"git:pre-push": "run-s --print-label clean pre-compile lint test",
		"lint": "eslint {src,tests}",
		"lint:fix": "eslint {src,tests} --fix",
		"pre-compile": "tsc --noEmit --project tsconfig.dist.json",
		"prepare": "lefthook install",
		"prepublishOnly": "run-s --print-label clean compile prettify",
		"prettify": "prettier --write --loglevel warn './dist/**/*.{js,ts}'",
		"test": "NODE_OPTIONS='--loader ts-node/esm' c8 test"
	},
	"sideEffects": false,
	"type": "module",
	"types": "./dist/index.d.ts"
}
